extends base

block postStyles
    link(rel='stylesheet', href='/public/css/bulkSearch.css')
    link(rel='stylesheet', href='/public/css/pagination.css')

block content
    h3 1. Select experiments
    table.ui.celled.table
        thead
            tr
                th Select
                th ID
                th Description
                th Lysate
                th Uploader
        tbody#experiments-list-container
    
    .pagination#pagination-component
            
    h3 2. Input proteins
    .text-center
        .ui.input.search.maxWidth
            textarea(name="prot", placeholder="P1234, P43244").inline.prompt.maxWidth.textarea P55072 P00338 P12314 O95456 P12345 P43523 A0AVF1 P37837 P12346 P12347 P12348 P12349 P12310 P12311 P12312 P12313 P12315 P12316 P12317 P12318 P12319 P12320
    .stats
        span
            strong 0
        |  Protein identifiers matched by your input
    .space
    h3 3. Check statistics
    .space
    p Input at least one protein and select at least one experiment to get started.
    
    .heatmap#heatmap
    
    table.ui.celled.table#result-table
        thead
            tr
                th Protein\Experiment
        tbody
    .space
    .grid
    .space
    

block settings
    .divider
    .item.filterExperiments Filter experiments
    .item.showMean Toggle means
    a(href='/curves').item Selected Curves

block scripts
    - var delta = 50
    script(type="text/javascript", src="/public/libs/isotope/isotope.js")
    script(type="text/javascript", src="/public/libs/isotope/packery.js")
    script(type="text/javascript", src="/public/js/bulkSearch.js")
    script(type="text/javascript", src="/public/js/pagination.js")
