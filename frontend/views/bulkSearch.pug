extends base

block postStyles
    link(rel='stylesheet', href='/public/css/bulkSearch.css')
    link(rel='stylesheet', href='/public/css/pagination.css')

block content
    h3 1. Select experiments
    table.ui.celled.table
        thead
            tr
                th Select
                th ID
                th Description
                th Lysate
                th Uploader
        tbody#experiments-list-container
    
    .pagination#pagination-component
            
    h3 2. Input proteins
    .text-center
        .ui.input.search.maxWidth
            textarea(name="prot", placeholder="P1234, P43244").inline.prompt.maxWidth.textarea P55072 P00338 O95456  P43523 A0AVF1 P37837 P12347 P12349   
    .stats
        span
            strong 0
        |  Protein identifiers matched by your input
    .space
    h3 3. Check statistics
    .space
    p Input at least one protein and select at least one experiment to get started.
    
    
