extends base

block postStyles
    link(rel='stylesheet', href='/public/css/experiments.css')
    link(rel='stylesheet', href='/public/css/pagination.css')

block content
    h3 Experiments
    .search-header
        .search-experiment-text Enter an experiment id or name:
        .search-experiment
            input(type="text", name="experiment-id", placeholder="Experiment name or ID" value="").field#experiment-search

    .download-all-buttons
        .download-all-button
            a.ui.button.json(href='/api/reads/temperatures/raw', download='all_experiments.json')
                span Download ALL as JSON data

        .download-all-button
            a.ui.button.tsv(href='/api/reads/temperatures/raw/?f=tsv', download='all_experiments.tsv')
                span Download ALL as TSV data

        .download-all-button
            a.ui.button.csv(href='/api/reads/temperatures/raw/?f=csv', download='all_experiments.csv')
                span Download ALL as CSV data

    .description Click onto a experiment to view details for it and download the data.
    table.ui.celled.table
        thead
            tr
                th ID
                th Name
                th Uploader
        tbody#experiments-list-container

    .pagination#pagination-component


block settings
    .divider
    a(href='/search').item Search proteins
    a(href='/bulkSearch').item Search list of proteins
    a(href='/complexes').item Search Complex
    a(href='/analyze-proteins').item Analyze

block scripts
    - var delta = 50
    script(type="text/javascript", src="/public/libs/isotope/isotope.js")
    script(type="text/javascript", src="/public/libs/isotope/packery.js")
    script(type="text/javascript", src="/public/js/loading-animation.js")
    script(type="text/javascript", src="/public/js/pagination.js")
    script(type="text/javascript", src="/public/js/helper.js")
    script(type="text/javascript", src="/public/js/experiments.js")
